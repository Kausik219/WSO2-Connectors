<template name="retrieveComments" xmlns="http://ws.apache.org/ns/synapse">
	<parameter name="resourceId" description="The resource id of the comments that should be returned from the endpoint"/>
    <parameter name="resourceType" description=" The name that you wish to search for."/>
	
   <sequence>
		<property name="resourceId" expression="$func:resourceId"/>
        <property name="resourceType" expression="$func:resourceType"/>
		
        <call>
            <endpoint>
                <http method="get"
                      uri-template="{uri.var.apiUrl}/{uri.var.apiVersion}/comments/{uri.var.resourceId}/{uri.var.resourceType}"/>
            </endpoint>
        </call>

    </sequence>
</template>

